<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/interest_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/interest_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/eng_bg"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/interest_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/eng" />

                <ImageView
                    android:id="@+id/interest_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/interest_title"
                    fontPath="@string/font_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/interest_icon"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="2dp"
                    android:text="วิศวกรรมศาสตร์"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/interest_title_eng"
                    fontPath="@string/font_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/interest_title"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="0dp"
                    android:text="Faculty of Engineering"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>