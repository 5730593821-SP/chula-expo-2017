<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/toolbar_bg">
        <ImageView
            android:id="@+id/ivRegisProfile"
            android:src="@drawable/iv_profile"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <EditText
            android:id="@+id/etRegisName"
            android:text="Mark Zuckerberg"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rounded_rectangle">

            <Button
                android:id="@+id/btnStudent"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Student"
                android:padding="3dp"
                android:background="@drawable/shape_rounded_rectangle_white"
                android:drawableLeft="@drawable/ic_check_circle_pink"/>
            <Button
                android:id="@+id/btnWorker"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="Worker"
                android:textColor="@color/white"
                android:padding="3dp"
                android:background="#00000000" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="EMAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tvRegis"/>
            <EditText
                android:id="@+id/etEmail"
                android:text="Chula.Expo@hotmail.com"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">
                    <TextView
                        android:text="AGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tvRegis"/>
                    <EditText
                        android:id="@+id/etAge"
                        android:text="32"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    <TextView
                        android:text="GENDER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tvRegis"/>
                    <Spinner
                        android:id="@+id/spGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWorkingPlace"
                android:text="SCHOOL/UNIVERSITY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tvRegis"/>
            <EditText
                android:id="@+id/etWorkingPlace"
                android:text="Chulalongkorn University"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvYear"
                android:text="GRADE/YEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tvRegis"/>
            <EditText
                android:id="@+id/etYear"
                android:text="4"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnNext"
                android:text="Next"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/shape_rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>