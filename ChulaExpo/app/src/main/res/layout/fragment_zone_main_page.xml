<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cuexpo.chulaexpo.fragment.ZoneMainPageFragment"
    android:background="@color/light_grey">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/zone_image"
        android:clickable="false"
        android:src="@drawable/login_bg"
        app:srcCompat="@drawable/login_bg"
        android:contextClickable="false"
        android:scaleType="centerCrop"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:scrollbars="none"
        android:divider="@color/light_grey" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:elevation="1dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/light_grey"
            android:id="@+id/imageView5"
            android:layout_marginBottom="6dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="9dp">

                <TextView
                    android:id="@+id/title"
                    fontPath="fonts/ThaiSansNeue-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-7sp"
                    android:text="Robotic Vacuum Cleaner"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/zone_tag"
                    fontPath="fonts/ThaiSansNeue-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginTop="7dp"
                    android:background="@color/booking_full"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="ENG"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/related_header"
        android:layout_below="@id/list_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@color/header_background">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/related_event_header"
                    android:text="@string/related_event_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:lineSpacingExtra="-4sp"
                    style="@style/tvHighlightHeader" />
                <TextView
                    android:id="@+id/tvStageHeaderDesc"
                    android:text="@string/Related_event_header_text_th"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    style="@style/tvHeaderDesc"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_event"/>

        </RelativeLayout>
    </FrameLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/related_list_view"
        android:layout_below="@id/related_header"
        android:scrollbars="none"
        android:divider="@color/light_grey" />


    <ImageView
        android:id="@+id/close_button"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:src="@drawable/close_button"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>
