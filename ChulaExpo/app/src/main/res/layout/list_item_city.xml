<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:src="@drawable/city_1"
        android:id="@+id/city_background"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/dim_overlay"/>
        <!--android:background="@color/black"-->
        <!--android:alpha="0.5" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="5dp"
        android:id="@+id/info"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cir_mock"
            android:id="@+id/city_icon"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/city_icon"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="2dp"
                android:text="Smart City"
                fontPath="@string/font_bold"
                android:id="@+id/city_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"
                android:text="143 events"
                fontPath="@string/font_bold"
                android:id="@+id/number_of_events"/>
        </LinearLayout>


        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="3dp"
            android:background="#ff7201"
            android:textSize="10dp"
            android:text="SMART"
            fontPath="@string/font_bold"
            android:id="@+id/city_tag"/>
    </RelativeLayout>




</RelativeLayout>
