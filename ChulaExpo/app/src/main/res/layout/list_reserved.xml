<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:id="@+id/reserved_iv_thumbnail"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/highlight_psy_1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/reserved_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Psychology Fair"/>

            <TextView
                android:id="@+id/reserved_tv_time"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="12.00 - 13.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/reserved_tv_fac"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="#B22222"
                    android:textColor="#ffffff"
                    android:text="ENG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/reserved_tv_reserved"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="#50ff5e"
                    android:textColor="#ffffff"
                    android:text="10/50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/reserved"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:scaleType="fitEnd"
            android:layout_gravity="center"
            android:src="@drawable/next"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>

</LinearLayout>